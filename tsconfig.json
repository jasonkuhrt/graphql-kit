// @libra
{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    // Package
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Output
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true, // Run source with NodeJS

    // DX
    "moduleDetection": "force",
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "noErrorTruncation": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, // Great for conditional middlewares
    "paths": {
      "#*": ["./src/*"],
      "#grafaid": ["./src/grafaid/$.ts"],
      "#graphql-schema-path": ["./src/graphql-schema-path/$.ts"],
      "#catalog": ["./src/catalog/$.ts"],
      "#schema": ["./src/schema/$.ts"],
      "#lifecycles": ["./src/lifecycles/$.ts"],
      "#change": ["./src/change/$.ts"],
      "#revision": ["./src/revision/$.ts"],
      "#version": ["./src/version/$.ts"],
      "#graphql-error": ["./src/graphql-error/$.ts"],
      "#graphql-schema-loader": ["./src/graphql-schema-loader/$.ts"],
      "#schema-definition": ["./src/schema-definition/$.ts"],
      "#date-only": ["./src/date-only/$.ts"],
      "#version-coverage": ["./src/version-coverage/$.ts"],
      "#kit-temp": ["./src/kit-temp/$.ts"],
      "#kit-temp/$$": ["./src/kit-temp/$$.ts"],
      "#catalog/$$": ["./src/catalog/$$.ts"],
      "#semver": ["./src/semver/$.ts"],
      "#grafaid-old": ["./src/grafaid-old/grafaid.ts"]
    },

    // DX covered by linter:
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // DX for Downstream
    "isolatedModules": true, // performance
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["build", "eslint.config.js"]
}
